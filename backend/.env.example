# Backend production environment variables (Vercel)
# Use Supabase Session Pooler host (IPv4), not db.<project-ref>.supabase.co
# URL-encode special password chars (?, /, +, &, @, :) before pasting
DATABASE_URL=postgresql+psycopg://USER:ENCODED_PASSWORD@aws-0-REGION.pooler.supabase.com:6543/postgres?sslmode=require
SECRET_KEY=replace-with-a-long-random-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=https://your-frontend-project.vercel.app,http://localhost:5173
CORS_ORIGIN_REGEX=^https://.*\.vercel\.app$
CORS_ALLOW_CREDENTIALS=true
ADMIN_EMAIL=admin@macquiz.com
ADMIN_PASSWORD=change-this-password
